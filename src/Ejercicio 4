###############################
nano 04-hola-parametros-separados.sh
  ! /bin/bash


if [$# -le 0 ]; then
 echo "Hay que introducir al menos un par√°metro."
 exit 1
fi

MENSAJE="Hola"
PRIMERO=1

while [ -n "$1 ]; do
 if [$PRIMERO -eq 1 ]; then
      MENSAJE="$MENSAJE $1"
      primero=0
 else
      MENSAJE="$MENSAJE, $1"
 fi
shift
done
echo $MENSAJE"!"
